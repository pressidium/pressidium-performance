{
    "name": "pressidium/pressidium-performance",
    "description": "Speed up your WordPress site, improve Core Web Vitals and enhance user experience with one-click image optimization, CSS & JavaScript minification.",
    "type": "wordpress-plugin",
    "license": "GPL-2.0-or-later",
    "autoload": {
        "classmap": [
            "includes/classes"
        ],
        "psr-4": {
            "Pressidium\\WP\\Performance\\": "includes/"
        }
    },
    "authors": [
        {
            "name": "Konstantinos Pappas",
            "email": "konpap@pressidium.com"
        }
    ],
    "support": {
        "issues": "https://github.com/pressidium/pressidium-performance/issues",
        "source": "https://github.com/pressidium/pressidium-performance"
    },
    "require": {
        "php": ">=8.1"
    },
    "require-dev": {
        "league/container": "^3.4",
        "psr/simple-cache": "^1.0",
        "matthiasmullie/minify": "^1.3",
        "ext-exif": "*",
        "psr/log": "^2.0",
        "wp-coding-standards/wpcs": "^3.0.0",
        "phpcompatibility/phpcompatibility-wp": "^2.1",
        "phpstan/phpstan": "^1.10",
        "vimeo/psalm": "^5.8",
        "phpmd/phpmd": "^2.13",
        "szepeviktor/phpstan-wordpress": "^1.1",
        "php-stubs/wordpress-stubs": "^6.1",
        "phpstan/extension-installer": "^1.2",
        "phpcsstandards/phpcsutils": "^1.0",
        "squizlabs/php_codesniffer": "^3.7",
        "mck89/peast": "^1.17",
        "coenjacobs/mozart": "^0.7.1"
    },
    "lint": "./vendor/squizlabs/php_codesniffer/bin/phpcs",
    "phpstan": "./vendor/bin/phpstan -c phpstan.neon",
    "config": {
        "allow-plugins": {
            "phpstan/extension-installer": true,
            "dealerdirect/phpcodesniffer-composer-installer": true
        },
        "platform": {
            "php": "8.1"
        }
    },
    "extra": {
        "mozart": {
            "dep_namespace": "Pressidium\\WP\\Performance\\Dependencies\\",
            "dep_directory": "/includes/Dependencies/",
            "classmap_directory": "/includes/classes/dependencies/",
            "classmap_prefix": "Pressidium_Performance_",
            "packages": [
                "league/container",
                "psr/log",
                "psr/simple-cache",
                "nyholm/psr7",
                "matthiasmullie/minify",
                "mck89/peast"
            ],
            "delete_vendor_directories": false
        }
    },
    "scripts": {
        "lint": "./vendor/squizlabs/php_codesniffer/bin/phpcs",
        "phpstan": "./vendor/bin/phpstan -c phpstan.neon",
        "post-install-cmd": [
            "\"vendor/bin/mozart\" compose",
            "composer dump-autoload",
            "cp -R vendor/matthiasmullie/minify/data includes/Dependencies/MatthiasMullie/data/"
        ],
        "post-update-cmd": [
            "\"vendor/bin/mozart\" compose",
            "composer dump-autoload",
            "cp -R vendor/matthiasmullie/minify/data includes/Dependencies/MatthiasMullie/data/"
        ]
    }
}
